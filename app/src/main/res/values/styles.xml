<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="homeTheme" parent="AppTheme">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowExitTransition">@transition/slide_bottom_to_up</item>
    </style>

    <style name="editTheme" parent="AppTheme">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowEnterTransition">@transition/slide_bottom_to_up</item>
        <item name="android:windowExitTransition">@transition/slide_up_to_bottom</item>
    </style>

    <style name="loginTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/statusBarColor</item>
        <item name="android:windowBackground">@color/colorAccent</item>

        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowEnterTransition">@transition/slide_right_to_left</item>
        <item name="android:windowExitTransition">@transition/slide_left_to_right</item>
    </style>

    <style name="registerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/statusBarColor</item>
        <item name="android:windowBackground">@color/colorAccent</item>

        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowEnterTransition">@transition/slide_right_to_left</item>
        <item name="android:windowExitTransition">@transition/slide_left_to_right</item>
    </style>

    <style name="hintTheme" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="componentMargin" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

</resources>
