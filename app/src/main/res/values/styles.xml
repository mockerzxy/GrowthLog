<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="homeTheme" parent="AppTheme">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowExitTransition">@transition/slide_bottom_to_up</item>
    </style>

    <style name="editTheme" parent="AppTheme">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowEnterTransition">@transition/slide_bottom_to_up</item>
        <item name="android:windowExitTransition">@transition/slide_up_to_bottom</item>
    </style>

</resources>
