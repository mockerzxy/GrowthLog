<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.xueyuanzhang.growthlog">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.activity.MainActivity"
            android:label="GrowthLog"
            android:theme="@style/homeTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.ActivityEdit"
            android:theme="@style/editTheme"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".ui.activity.ActivityDetail" />
        <activity android:name=".ui.activity.ActivityImageFlipper" />
        <activity
            android:name=".ui.activity.ActivityLogin"
            android:theme="@style/loginTheme"></activity>
        <activity android:name=".ui.activity.ActivityZone" />
        <activity
            android:name=".ui.activity.ActivityRegister"
            android:theme="@style/registerTheme" />
        <activity android:name=".ui.activity.ActivityProfile" />
        <activity android:name=".ui.activity.ActivityShare"></activity>
        <activity android:name=".ui.activity.ActivityModifyPw" />
    </application>

</manifest>